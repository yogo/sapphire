.content-box
  .modal-header
    %h3 Edit #{@collection.name} Data Row
    %p.muted Data Row ID: #{@item.id}
  = form_for @item, as: "item", :url => project_collection_item_path(@project, @collection, @item), 
            :html=>{"multipart" => true, :method=>"put", :class => 'form-box', :ajax=>false} do |f| 
    .modal-body
      = render :partial => 'items/form', :locals => {:f => f, :collection => @collection, :file_collection => @file_collection}
    .modal-footer
      %button.btn.btn-primary Save Changes
      %a.btn(data-dismiss="modal") Close
