%h1
  Upload New Data:

%div{:class=>"form"}
  = form_for("upload", :url => project_upload_path, :html => {"multipart" => true, "data-ajax"=> false,:class => 'form'}, 
   :builder => SapphireFormBuilder) do |f| 
    %p
      = f.label("Upload To")
      = select("upload","collection", @project.data_collections.all.collect{|d| [d.name, d.id]}, {:prompt => "Select Action", :required=>true,:include_blank => 'A New Collection'})
    %p
      = f.file_field :file
    
    = f.submit("Upload Data",:submit_image => image_tag("web-app-theme/icons/tick.png", :alt => "Save"), :cancel_link => link_to("Cancel", projects_path, :class => "text_button_padding link_button"))

