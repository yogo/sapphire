%h1 Create Project

.block
  .secondary-navigation.button-navigation
    .wat-cf
      = nav_button("Back to Projects", "web-app-theme/icons/edit-undo.png", projects_path)
  
  .content
    .inner
      = form_for(@project, :url => projects_path, 
                           :html => {:class => 'form'}, 
                           :builder => SapphireFormBuilder) do |f|
        .group
          = f.label(:name)
          = f.text_field(:name)

        .group
          = f.label(:description)
          = f.text_area(:description)
        .group.navform.wat-cf
          =h f.submit("Save", :submit_image => image_tag("web-app-theme/icons/tick.png", :alt => "Save"), :cancel_link => link_to("Cancel", projects_path, :class => "text_button_padding link_button"))
          / %button.button{:type => "submit"}
          /   =
          /   Save
          / %span.text_button_padding or
          / %a.text_button_padding.link_button{:href => projects_path} Cancel
          
          
