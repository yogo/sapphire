.row
  .container
    = form_for(@project, :url => projects_path, :html => {:class => 'form-box'}) do |f|
      %legend Create Project
      = render :partial => 'form', :locals => {:f => f}
      %button.btn.btn-primary{:type => 'submit'} Save
      or 
      = link_to("Cancel", projects_path, :class => 'button btn btn-mini')