!!!
%html
  %head
    %title Yogo Sapphire
    = stylesheet_link_tag "web-app-theme/base",
      "web-app-theme/themes/default/style",
      "web-app-theme/override",
      "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.0/themes/base/jquery-ui.css",
      "application", 
      :cache => false
    = javascript_include_tag :defaults,
      "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js", 
      :cache => false
    = csrf_meta_tag
  
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Yogo Sapphire
        #user-navigation
          %ul.wat-cf
            -if @project && !@project.new?
              %li
                <img src="/images/web-app-theme/icons/search.png" height=12px/>
                %a{:href => "#{project_search_path(@project)}"}= t("web-app-theme.profile", :default => "Search")
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")
            -if current_user
              %li
                =link_to("Logout(#{current_user.first_name})", destroy_user_session_path, :method=> :delete)
        #main-navigation
          %ul.wat-cf
            %li{:class => my_project?(@project, "active") }
              = link_to("My Projects", projects_path)
            %li{:class => public_project?(@project, "active") }
              = link_to("Public Projects", projects_path(:public => true))
            -if @project && !@project.new? && !current_user.memberships(:project_id=>@project.id).empty?
              %li
                = link_to("Controlled Vocabularies", manage_controlled_vocabularies_project_collections_path(@project))
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #sidebar
          = yield :sidebar
        #wrap
          #main
            = yield
        #footer
          .block
            %p
              Copyright &copy; #{Time.now.year} Yogo Sapphire.
        
