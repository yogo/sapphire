%h1 #{@project.name} > #{@collection.name} > Schema

.block
  .secondary-navigation.button-navigation
    .wat-cf
      = nav_button("Back To Collection", "web-app-theme/icons/edit-undo.png", project_collection_path(@project, @collection))
      = nav_button("Add Another Column", "web-app-theme/icons/list-add.png", new_project_collection_schema_path)
  .content
    .inner
      %h3 Columns
      %ul.list.schema-list
        - @schema.each do |s|
          %li 
            .item 
              %a{:href => project_collection_schema_path(@project, @collection, s)}
                #{s.name} (#{s.type.to_s.split('::').last})