%table.table
  %tr
    %th Restore
    %th Created At
    %th Updated At
    %th System Provenance
    %th User Provenance
    %th Updated By
    %th Name
    %th Position
    %th Type
    %th Description
    %th Controlled Vocabulary ID
    %th Associated Schema ID
  - versions.each do |v|
    %tr{:class => cycle('odd','even')}
      %td= link_to image_tag("web-app-theme/icons/table_go.png", :border=>"0", :height=>"32px"), project_collection_schema_restore_path(project,collection,schema, :deleted_at=>v.deleted_at), :method=>:put,"data-confirm"=>"Are you sure you wish to restore this Item?"
      %td= v.deleted_at.strftime("%B %d, %Y %I:%M:%S %p")
      %td= v.updated_at.strftime("%B %d, %Y %I:%M:%S %p")
      %td= v.updated_comment
      %td= v.provenance_comment
      %td= v.updated_by
      %td= v.name
      %td= v.position
      %td= v.type
      %td= v.description
      %td= v.controlled_vocabulary_id
      %td= v.associated_schema_id 
